<!--indicamos que la vista es de tipo modelo de datos IEnumerable de la clase Contacto --> 
@model IEnumerable<PrimerCrudMVC.Models.Contacto>


@{
    ViewData["Title"] = "Mis contactos";
}

<h1 class="text-center">Listado de mis contactos</h1>

<div class="container">
    <div class="row">
        <div class="offset-9 col-3 mb-3 ">
            <a asp-action="crearContacto" asp-controller="Home" class="btn btn-outline-secondary d-block mx-auto btn-lg">
                <i class="bi bi-person-add"></i> Nuevo Contacto
            </a>

        </div>
    </div>


    <div class="mb-3 col-2">
        <input type="text" class="form-control"  id="busqueda" placeholder="Buscar...">
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@Url.Content(item.fotografia)" class="img-fluid rounded-start" alt="fotografia de @Html.DisplayFor(m => item.nombre)" style="height:100%; width:100%;">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-center" >@Html.DisplayFor(m => item.nombre)</h5>
                                    <p class="card-text d-none">Contacto # @Html.DisplayFor(m => item.id_contacto)</p>
                                    <p class="card-text text-center">@Html.DisplayFor(m => item.celular)</p>
                                    <p class="card-text d-none">@Html.DisplayFor(m => item.email)</p>
                                    <p class="card-text d-none">@Html.DisplayFor(m => item.fecha_creacion)</p>
                                    @Html.DisplayFor(m => item.email)
                                </div>
                                
                                <div class="card-footer text-center">
                                    <a class="btn btn-outline-warning" asp-action="editarContacto" asp-route-id="@item.id_contacto"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-outline-info verMas"><i class="bi bi-eye-fill"></i></a>
                                    <a class="btn btn-outline-danger" onclick="confirmarEliminar(@item.id_contacto)"><i class="bi bi-trash3-fill"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3>No hay Registros</h3>
        }
    </div>


</div>



@section Scripts {


}
