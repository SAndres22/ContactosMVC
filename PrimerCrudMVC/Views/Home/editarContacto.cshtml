<!--Indicamos que queremos acceder al modelo Contacto -->
@model PrimerCrudMVC.Models.Contacto

@{
    ViewData["Title"] = "Editar - Contacto";
}

<h1 class="text-center">Editar contacto</h1>

<div class="container">
    <div class="col-6 card mx-auto p-4">
        <form method="POST" asp-action="editarContacto" enctype="multipart/form-data">
            <input type="hidden" asp-for="id_contacto" />

            <div asp-validation-summary="ModelOnly" class="text-danger">
                <!-- Validaciones de requerido del Modelo-->
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" placeholder="Ingresa un nombre" autocomplete="off" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="telefono" class="control-label"></label>
                <input asp-for="telefono" class="form-control" placeholder="Ingresa un telefono" autocomplete="off" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="celular" class="control-label"></label>
                <input asp-for="celular" class="form-control" placeholder="Ingresa un celular" autocomplete="off" />
                <span asp-validation-for="celular" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" placeholder="Ingresa un correo" autocomplete="off" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fotografia" class="control-label"></label>
                <input type="file" asp-for="fotografia" class="form-control" />
                <span asp-validation-for="fotografia" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-outline-success d-block mx-auto">
                    <i class="bi bi-pencil-square"></i> Guardar Contacto
                </button>
            </div>


        </form>

        <a asp-action="Index" asp-controller="Home" class="d-block">Volver a atras</a>

    </div>
</div>